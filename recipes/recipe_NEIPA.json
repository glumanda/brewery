{
    "name": "New England IPA",
    "comment": "http://www.beerstorevienna.at/wp-content/uploads/2017/11/11-Hobby-BrauRezept-November-NEIPA.pdf",
    "steps": [
        {
            "id": 1,
            "step": "Mit 20l einmaischen",
            "temperature": 38,
            "heating": "one_time",
            "stirring": "full",
            "duration": "wait",
            "alarm": [ 
				{ "time": 0, "text": "Einmaischen starten!" } 
			]
        },
        {
            "id": 2,
            "step": "Gummirast",
            "temperature": 38,
            "heating": "control",
            "stirring": "full",
            "duration": 10,
            "hysteresis": 0.5
        },
        {
            "id": 3,
            "step": "Maltoserast",
            "temperature": 63,
            "heating": "control",
            "stirring": "full",
            "duration": 35,
            "hysteresis": 0.5
        },
        {
            "id": 4,
            "step": "Verzuckerungsrast",
            "temperature": 72,
            "heating": "control",
            "stirring": "full",
            "duration": 25,
            "hysteresis": 0.5
        },
        {
            "id": 5,
            "step": "Jod Prüfung",
            "temperature": 72,
            "heating": "control",
            "stirring": "full",
            "duration": "wait",
            "hysteresis": 0.5,
            "alarm": [ 
				{ "time": 0, "text": "Jodprüfung vornehmen!" } 
			]
        },
        {
            "id": 6,
            "step": "Abmaischen nach 5 min",
            "temperature": 78,
            "heating": "control",
            "stirring": "full",
            "duration": "wait",
            "hysteresis": 0.5,
            "alarm": [ 
				{ "time": 5, "text": "Abmaischen starten!" } 
			]
        },
        {
            "id": 7,
            "step": "Läuterruhe",
            "temperature": 1,
            "heating": "off",
            "stirring": "off",
            "duration": 20,
            "alarm": [ 
				{ "time": 20, "text": "Die Läuterung kann beginnen!" } 
			]
        },
        {
            "id": 8,
            "step": "Mit 10l Nachguss läutern",
            "temperature": 1,
            "heating": "off",
            "stirring": "off",
            "duration": "wait",
            "alarm": [ 
				{ "time": 0, "text": "Hopfengabe 1: Bitte 5g Mosaic zur Vorderwürze geben!" } 
			]
        },
        {
            "id": 9,
            "step": "Kochen und Hopfengaben",
            "temperature": 97,
            "heating": "full",
            "stirring": "off",
            "duration": 70,
            "hysteresis": 0.1,
            "alarm": [
                { "time": 60, "text": "Bitte Kühlschlange in den Sud zum Mitkochen geben." },
                { "time": 70, "text": "Hopfengabe 2: Bitte 20g Mosaic und 20g VicSecret zum Whirlpool geben!" }
            ]
        },
        {
            "id": 10,
            "step": "Nachisomerisierung",
            "temperature": 80,
            "heating": "off",
            "stirring": "off",
            "duration": 10,
            "hysteresis": 0.1
        },
        {
            "id": 11,
            "step": "Kühlung",
            "temperature": 28,
            "heating": "off",
            "stirring": "off",
            "cooling": "one_time",
            "duration": 1,
            "hysteresis": 0.1,
            "alarm": [
                { "time": 0, "text": "Kühlung beendet. Abseihen kann beginnen!" }
            ]
        }
    ]
}